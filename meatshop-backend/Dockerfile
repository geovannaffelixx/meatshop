# ============================================
FROM node:20-alpine AS builder

# DependÃªncias para build de pacotes nativos
RUN apk add --no-cache python3 make g++

WORKDIR /usr/src/app

COPY package*.json ./
RUN npm ci
RUN npm install -g @nestjs/cli

COPY . .

# Compila o cÃ³digo NestJS (gera dist/)
RUN npm run build


# ============================================
# ðŸš€ STAGE 2 â€” PRODUÃ‡ÃƒO
# ============================================
FROM node:20-alpine

WORKDIR /usr/src/app

COPY --from=builder /usr/src/app/dist ./dist
COPY package*.json ./
RUN npm ci --omit=dev

ENV NODE_ENV=production \
    PORT=3001 \
    TZ=America/Sao_Paulo

EXPOSE 3001

VOLUME ["/usr/src/app/data", "/usr/src/app/logs"]

CMD ["node", "dist/main.js"]